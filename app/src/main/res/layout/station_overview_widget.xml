<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/transparent"
    android:padding="@dimen/widget_margin"
    android:orientation="vertical"
    android:theme="@style/AppTheme.TextStyle.Widget">

    <TextView
        android:id="@+id/widget_station_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/widget_margin"
        android:layout_marginStart="@dimen/widget_margin"
        tools:text="@string/example_station_name" />

    <include layout="@layout/station_overview_fragment" />

</LinearLayout>